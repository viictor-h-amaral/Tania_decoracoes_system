<UserControl x:Class="TaniaDecoracoes.WPFLibrary.UserControls.CommonForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TaniaDecoracoes.WPFLibrary.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        
        <DataTemplate x:Key="StringFieldTemplate">

            <TextBox Text="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     IsReadOnly="{Binding IsReadOnly}"
                     Margin="0,2"/>
        </DataTemplate>

        <DataTemplate x:Key="BooleanFieldTemplate">
            <CheckBox IsChecked="{Binding Value, Mode=TwoWay}" Margin="0,2"/>
            <!--IsEnabled="{Binding IsReadOnly 
                , Converter={StaticResource InverseBooleanConverter}}"-->
                      
        </DataTemplate>

        <DataTemplate x:Key="NumericFieldTemplate">
            <TextBox Text="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         IsReadOnly="{Binding IsReadOnly}"
                         Margin="0,2"
                         HorizontalAlignment="Stretch"/>
        </DataTemplate>

        <local:FieldTemplateSelector x:Key="FieldTemplateSelector"
                    StringTemplate="{StaticResource StringFieldTemplate}"
                    BooleanTemplate="{StaticResource BooleanFieldTemplate}"/>

    </UserControl.Resources>
    
    
    <Grid>

        <Grid.Resources>
            <ResourceDictionary>
                <ResourceDictionary.MergedDictionaries>
                    <ResourceDictionary Source="/TaniaDecoracoes.WPFLibrary;component/Styles/Buttons/CloseFormButtonStyle.xaml" />
                </ResourceDictionary.MergedDictionaries>
            </ResourceDictionary>
        </Grid.Resources>

        <Grid.RowDefinitions>
            <RowDefinition x:Name="TituloRow" Height="Auto"/>
            <!-- <RowDefinition x:Name="CloseButtonRow" Height="Auto"/> -->
            <RowDefinition x:Name="CustomButtonsRow"  Height="Auto"/>
            <RowDefinition x:Name="FieldsRow"  Height="*"/>
            <RowDefinition x:Name="CustomButtonsRow2"  Height="Auto"/>
        </Grid.RowDefinitions>
        
       <TextBlock Grid.Row="0"
                  x:Name="txtTitulo"
                  Text="{Binding Titulo}"
                  FontSize="35"
                  Margin="10"
                  FontFamily="Quicksand"
                  FontWeight="SemiBold"
                  Foreground="#7A3A5C"/>
        
        <!-- <Button Grid.Row="1"
                x:Name="CloseButton"
                Style="{StaticResource CloseFormButtonStyle}"
                Tag="&#xf00d;"
                Width="Auto"
                Margin="5"
                HorizontalAlignment="Right"
                Command="{Binding CloseCommand}"/> -->
        
        <StackPanel Grid.Row="2" x:Name="stckPanelCommands" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10" Width="Auto">
            <!-- Criar pelo código c# / definidos por quem instancia esse cara -->
                        
        </StackPanel>
        
        <Grid Grid.Row="3" x:Name="gridFields">
            <!-- passa a entidade e a partir das suas propriedades criamos os fields -->
            <!-- deve-se criar engenho de criação de campos, com possibilidade de quem chama esse user control definir especificamente os 
                fields -->
