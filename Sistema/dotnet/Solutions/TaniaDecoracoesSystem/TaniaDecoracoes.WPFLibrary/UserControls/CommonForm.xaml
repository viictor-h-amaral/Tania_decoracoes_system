                <ItemsControl.ItemTemplate>
                    <DataTemplate>

                        <StackPanel Orientation="Vertical" Margin="0,5">
                            <TextBlock Text="{Binding Label}" FontWeight="Bold"/>
                            <!-- Aplicação do TemplateSelector aqui -->
                            <ContentControl Content="{Binding}"
                              ContentTemplateSelector="{StaticResource FieldTemplateSelector}"/>
                            <TextBlock Text="{Binding ErrorMessage}" Foregroundc:\desenvolvimento\taniadecoracoes_system\projeto\sistema\dotnet\solutions\taniadecoracoessystem\taniadecoracoes.wpflibrary\usercontrols\commonform.xaml.cs
c:\desenvolvimento\taniadecoracoes_system\projeto\sistema\dotnet\solutions\taniadecoracoessystem\taniadecoracoes.wpflibrary\usercontrols\commonform.xaml
="Red" />
                            <!-- Visibility="{Binding HasError, Converter={StaticResource BooleanToVisibilityConverter}}"-->
                        </StackPanel>

                        <!-- <TextBox Text="{Binding Value}" Margin="5" /> -->
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>

        <StackPanel Grid.Row="2" x:Name="stckPanelCommands2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10" Width="Auto">
            <!-- Criar pelo código c# / definidos por quem instancia esse cara / Cópia da estrutura de stckPanelCommands -->

        </StackPanel>
    </Grid>
</UserControl>
