<Window x:Class="TaniaDecoracoes.WPFApp.MainWindow"  
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"  
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"  
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"  
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaniaDecoracoes.WPFApp"  
        mc:Ignorable="d" WindowStyle="None" AllowsTransparency="True"
        Background="Transparent"
        Title="MainWindow" Height="450" Width="800" >

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0" 
                  GlassFrameThickness="0"
                  ResizeBorderThickness="10"
                  UseAeroCaptionButtons="False" />
    </WindowChrome.WindowChrome>

    <Border BorderThickness="5" BorderBrush="Transparent">
        <Grid Background="White">
            <Grid.RowDefinitions>
                <RowDefinition x:Name="ToolBarRow" Height="30"/>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid x:Name="ToolBar" Grid.Row="0">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition x:Name="BotoesTarefasColumn"  Width="*" />
                    <ColumnDefinition x:Name="ControlesColumn" Width="Auto" />
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0" x:Name="GridControles"
                        MouseLeftButtonDown="GridControles_MouseLeftButtonDown"
                        MouseMove="Grid_MouseMove"
                        MouseLeftButtonUp="Grid_MouseLeftButtonUp"
                        Background="White">
                </Grid>

                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="1,0,0,0">

                    <StackPanel.Resources>
                        <ResourceDictionary>
                            <ResourceDictionary.MergedDictionaries>
                                <ResourceDictionary Source="/TaniaDecoracoes.WPFApp;component/Styles/ControleJanelaStyle.xaml" />
                            </ResourceDictionary.MergedDictionaries>
                        </ResourceDictionary>
                    </StackPanel.Resources>

                    <Button x:Name="Minimizar" Style="{StaticResource ControleJanelaMinMax}" Height="Auto" Width="50" BorderThickness="0" Content="―" Click="Minimizar_Click" FontSize="12" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                    <Button x:Name="Maximizar" Style="{StaticResource ControleJanelaMinMax}" Height="Auto" Width="50" BorderThickness="0" Content="☐" Click="Maximizar_Click" FontSize="16" />
                    <Button x:Name="Fechar" Style="{StaticResource ControleJanelaClose}" Height="Auto" Width="50" BorderThickness="0" Content="×" Click="Fechar_Click" FontSize="20"/>
                </StackPanel>
            </Grid>

            <Grid Grid.Row="1" x:Name="ContentBigRow" Background="BlueViolet">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition x:Name="ModulosColumn" Width="2*" />
                    <ColumnDefinition x:Name="ConteudoColumn" Width="8*" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" x:Name="ModulosStackPanel" 
                            Background="CadetBlue" Orientation="Vertical"
                            VerticalAlignment="Top">

                    <Label x:Name="Logo" Grid.Column="0" VerticalAlignment="Top"
                        Content="LOGO">
                    </Label>

                    <Button Content="Módulo 1" BorderThickness="0"/>
                    <Button Content="Módulo 2" BorderThickness="0"/>
                    <Button Content="Módulo 3" BorderThickness="0"/>

                </StackPanel>

                <Grid Grid.Column="1" Background="Beige">

                    <Grid.RowDefinitions>
                        <RowDefinition x:Name="ConfigOptionsRow" Height="20" />
                        <RowDefinition x:Name="ContentRow" Height="*" />
                    </Grid.RowDefinitions>


                    <Grid Grid.Row="0" x:Name="ConfigOptions" Background="Black">
                    </Grid>
                    <Grid Grid.Row="1" x:Name="ContudoGrid">
                    </Grid>

                </Grid>
            </Grid>
        </Grid>
    </Border>

</Window>
