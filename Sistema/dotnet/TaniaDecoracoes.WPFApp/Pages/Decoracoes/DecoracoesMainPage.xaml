<Page x:Class="TaniaDecoracoes.WPFApp.Pages.Decoracoes.DecoracoesMainPage"
      x:Name="pgDecoracoesMainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TaniaDecoracoes.WPFApp.Pages.Decoracoes"
      xmlns:viewModel="clr-namespace:TaniaDecoracoes.WPFApp.ViewModel.Pages.Decoracoes"
      xmlns:userControls="clr-namespace:TaniaDecoracoes.WPFLibrary.UserControls;assembly=TaniaDecoracoes.WPFLibrary"
      xmlns:menu="clr-namespace:TaniaDecoracoes.WPFLibrary.UserControls.EngenhoMenuUserControls;assembly=TaniaDecoracoes.WPFLibrary"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DecoracoesMainPage">

    <Grid Background="MistyRose">

        <Grid.Resources>
            <ResourceDictionary>
                <ResourceDictionary.MergedDictionaries>
                    <ResourceDictionary Source="/TaniaDecoracoes.WPFLibrary;component/Styles/Buttons/GridButtonsStyle.xaml" />
                    <ResourceDictionary Source="/TaniaDecoracoes.WPFLibrary;component/Styles/CommonGridStyle.xaml" />
                </ResourceDictionary.MergedDictionaries>
            </ResourceDictionary>
        </Grid.Resources>

        

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">

            <menu:ItensMenu DataContext="{Binding MenuVM}" />

            <userControls:CommonDataGrid
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            DataContext="{Binding DataGridVM}" 
            ColumnsSource="{Binding DataGridColumns}"/>

            <!-- <Button Content="Ir para Tipos de Eventos" Command="{Binding NavegarParaTiposEventosCommand}" /> -->
            
        </StackPanel>
    </Grid>
</Page>
