<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"  
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:userControls="clr-namespace:TaniaDecoracoes.WPFApp.UserControls"
                    xmlns:janelasPadroes="clr-namespace:TaniaDecoracoes.WPFApp.WindowsPattern">

    <Style x:Key="YesNoWindow" TargetType="{x:Type janelasPadroes:YesNoWindowBase}">  
        
        <Setter Property="Template">  
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type janelasPadroes:YesNoWindowBase}">  
                    <Border Background="{TemplateBinding Background}">
                        <Grid>
                            
                            <Grid.Resources>
                                <ResourceDictionary>
                                    <ResourceDictionary.MergedDictionaries>
                                        <ResourceDictionary Source="/Styles/ConfimationButton.xaml" />
                                    </ResourceDictionary.MergedDictionaries>
                                </ResourceDictionary>
                            </Grid.Resources>

                            <Grid.RowDefinitions>
                                <RowDefinition x:Name="IconRow" Height="40"/>
                                <RowDefinition x:Name="contentRow" Height="2*"/>
                                <RowDefinition x:Name="optionsRow" Height="*"/>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0" x:Name="gridSuperior" Background="{TemplateBinding Background}">
                                <userControls:FontAwesomeIcon
                                    IconCode="&#xf071;"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    FontSize="30"
                                    Foreground="White"
                                    Margin="10,0,10,0">
                                </userControls:FontAwesomeIcon>
                            </Grid>

                            <TextBlock x:Name="txtConteudo"
                                Grid.Row="1"
                                Text="{TemplateBinding QuestionText}"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontFamily="Quicksand"
                                FontSize="30"
                                Margin="10,10,10,10">
                            </TextBlock>

                            <Grid Grid.Row="2">

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="4*"/>
                                    <ColumnDefinition Width="3*"/>
                                </Grid.ColumnDefinitions>

                                <Button x:Name="btnConfirmation"
                                    Grid.Column="0"
                                    Content="{TemplateBinding YesButtonText}"
                                    FontSize="20"
                                    Style="{StaticResource btnStylePositive}"
                                    Margin="10,10,10,10"
                                    Command="{Binding YesCommand, RelativeSource={RelativeSource AncestorType={x:Type janelasPadroes:YesNoWindowBase}}}">
                                </Button>

                                <Button x:Name="btnNegation"
                                    Grid.Column="1"
                                    Content="{TemplateBinding NoButtonText}"
                                    FontSize="20"
                                    Style="{TemplateBinding NoButtonStyle}"
                                    Margin="10,10,10,10"
                                    Command="{Binding NoCommand, RelativeSource={RelativeSource AncestorType={x:Type janelasPadroes:YesNoWindowBase}}}">
                                </Button>
                            </Grid>

                            <ContentPresenter/>
                        </Grid>
                    </Border>  
                </ControlTemplate>  
            </Setter.Value>  
        </Setter>  
        
    </Style>  
</ResourceDictionary>