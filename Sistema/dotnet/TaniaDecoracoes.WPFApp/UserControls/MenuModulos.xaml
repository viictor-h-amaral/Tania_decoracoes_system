<UserControl x:Class="TaniaDecoracoes.WPFApp.UserControls.MenuModulos"  
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"  
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"  
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"   
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"   
             xmlns:local="clr-namespace:TaniaDecoracoes.WPFApp.UserControls"              
             mc:Ignorable="d" >

    <ScrollViewer VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Auto">

        <StackPanel x:Name="ModulosStackPanel"   
            Background="Transparent" Orientation="Vertical"  
            VerticalAlignment="Top" HorizontalAlignment="Left" Height="Auto" Width="Auto" MaxWidth="250" MinWidth="150">

            <StackPanel.Resources>
                <ResourceDictionary>
                    <ResourceDictionary.MergedDictionaries>
                        <ResourceDictionary Source="/TaniaDecoracoes.WPFApp;component/Styles/ModuloButtonsStyle.xaml" />
                    </ResourceDictionary.MergedDictionaries>
                </ResourceDictionary>
            </StackPanel.Resources>

            <Image x:Name="Logo" 
                   VerticalAlignment="Top" 
                   HorizontalAlignment="Center"  
                Source="/Resources/tania_decoracoes_system_logo.png">
            </Image>

            <Button x:Name="modBtnHome"
                Style="{StaticResource ModuloButtonsStyle}" 
                Content="Home"
                Tag="&#xf015;"/>

            <Button x:Name="modBtnDecoracoes"
                Style="{StaticResource ModuloButtonsStyle}" 
                Content="Decorações"
                Tag="&#xe682;"/>

            <Button x:Name="modBtnImagens"
                Style="{StaticResource ModuloButtonsStyle}" 
                Content="Imagens"
                Tag="&#xf03e;"/>

            <Button x:Name="modBtnCalendario"
                Style="{StaticResource ModuloButtonsStyle}" 
                Content="Calendário"
                Tag="&#xf073;"/>

            <Button x:Name="modBtnClientes"
                Style="{StaticResource ModuloButtonsStyle}" 
                Content="Clientes"
                Tag="&#xf0c0;"/>

            <Button x:Name="modBtnPagamentos"
                Style="{StaticResource ModuloButtonsStyle}" 
                Content="Pagamento"
                Tag="&#xf81d;"/>

            <Button x:Name="modBtnRelatórios"
                Style="{StaticResource ModuloButtonsStyle}" 
                Content="Relatórios"
                Tag="&#xf1c1;"/>

            <Button x:Name="modBtnMídia"
                Style="{StaticResource ModuloButtonsStyle}" 
                Content="Mídias"
                Tag="&#x40;"/>

            <Button x:Name="modBtnEstatisticas"
                Style="{StaticResource ModuloButtonsStyle}" 
                Content="Estatísticas"
                Tag="&#xe098;"/>

            <Button x:Name="modBtnItens"
                Style="{StaticResource ModuloButtonsStyle}" 
                Content="Itens"
                Tag="&#xf02b;"/>

            <Button x:Name="modBtnEnderecos"
                Style="{StaticResource ModuloButtonsStyle}" 
                Content="Endereços"
                Tag="&#xf3c5;"/>

            <Button x:Name="modBtnGerais"
                Style="{StaticResource ModuloButtonsStyle}" 
                Content="Gerais"
                Tag="&#xf5fd;"/>

            <Button x:Name="modBtnParceiros"
                Style="{StaticResource ModuloButtonsStyle}" 
                Content="Parceiros"
                Tag="&#xe533;"/>

        </StackPanel>
    </ScrollViewer>
</UserControl>