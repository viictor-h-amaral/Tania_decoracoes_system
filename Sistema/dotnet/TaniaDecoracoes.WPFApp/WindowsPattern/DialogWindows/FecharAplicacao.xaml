<Window x:Class="TaniaDecoracoes.WPFApp.WindowsPattern.DialogWindows.FecharAplicacao"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaniaDecoracoes.WPFApp.WindowsPattern.DialogWindows"
        xmlns:userControls="clr-namespace:TaniaDecoracoes.WPFApp.UserControls"
        WindowStyle="None"
        mc:Ignorable="d" ResizeMode="NoResize"
        Title="FecharAplicacao" Height="300" Width="400"
        WindowStartupLocation="CenterOwner">

    <WindowChrome.WindowChrome>
        <WindowChrome 
            CaptionHeight="0" 
            CornerRadius="20" 
            GlassFrameThickness="0" 
            ResizeBorderThickness="0"
            UseAeroCaptionButtons="False"/>
    </WindowChrome.WindowChrome>

    <Grid Background="#F3F3F3">
        <Grid.Resources>
            <ResourceDictionary>
                <ResourceDictionary.MergedDictionaries>
                    <ResourceDictionary Source="/Styles/ConfirmationButtonStyle.xaml" />
                </ResourceDictionary.MergedDictionaries>
            </ResourceDictionary>
        </Grid.Resources>

        <Grid.RowDefinitions>
            <RowDefinition x:Name="IconRow" Height="40"/>
            <RowDefinition x:Name="contentRow" Height="2*"/>
            <RowDefinition x:Name="optionsRow" Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="#FFB521">
            <userControls:FontAwesomeIcon
                    IconCode="&#xf071;"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    FontSize="30"
                    Foreground="White"
                    Margin="10,0,10,0">
            </userControls:FontAwesomeIcon>
        </Grid>

        <TextBlock x:Name="txtConteudo"
                Grid.Row="1"
                Text="Fechar a aplicação?"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontFamily="Quicksand"
                FontSize="30"
                Margin="10,10,10,10">
        </TextBlock>

        <Grid Grid.Row="2">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="btnFechar"
                    Grid.Column="0"
                    Content="Fechar"
                    FontSize="20"
                    Style="{StaticResource btnStylePositive}"
                    Margin="10,10,10,10"
                    Click="btnFechar_Click">
            </Button>

            <Button x:Name="btnCancelar"
                    Grid.Column="1"
                    Style="{StaticResource btnStyleNeutral}"
                    FontSize="20"
                    Content="Cancelar"
                    Margin="10,10,10,10"
                    Click="btnCancelar_Click">
            </Button>
        </Grid>
    </Grid>
</Window>
