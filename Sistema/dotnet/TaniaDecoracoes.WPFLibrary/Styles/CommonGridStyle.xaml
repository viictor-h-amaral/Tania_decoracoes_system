<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="CommonGrid.Background" Color="#F8D7E6"/>
    <SolidColorBrush x:Key="CommonGrid.BorderBrush" Color="#8A446C"/>

    <SolidColorBrush x:Key="GridButton.MouseOver.Background" Color="#F0B6D1"/>
    <SolidColorBrush x:Key="GridButton.MouseOver.Foreground" Color="#7A3A5C"/>

    <SolidColorBrush x:Key="GridButton.Pressed.Background" Color="#7A3A5C"/>
    <SolidColorBrush x:Key="CommonGrid.Foreground" Color="#7A3A5C"/>

    <Style x:Key="CommonDataGridTemplate" TargetType="{x:Type DataGrid}">
        <!-- Propriedades básicas -->
        <Setter Property="Background" Value="{StaticResource CommonGrid.Background}"/>
        <Setter Property="Foreground" Value="{StaticResource CommonGrid.Foreground}"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="BorderBrush" Value="{StaticResource CommonGrid.Background}"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="RowDetailsVisibilityMode" Value="VisibleWhenSelected"/>
        <Setter Property="ScrollViewer.CanContentScroll" Value="true"/>
        <Setter Property="ScrollViewer.PanningMode" Value="Both"/>
        <Setter Property="Stylus.IsFlicksEnabled" Value="False"/>
        <Setter Property="HeadersVisibility" Value="Column"/>
        <Setter Property="SelectionUnit" Value="FullRow"/>
        <Setter Property="AutoGenerateColumns" Value="False"/>
        <Setter Property="RowHeight" Value="28"/>
        <Setter Property="ColumnHeaderHeight" Value="60"/>
        <Setter Property="GridLinesVisibility" Value="None"/>

        <!-- Template principal -->
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type DataGrid}">
                    <Border BorderBrush="{TemplateBinding BorderBrush}" 
                        BorderThickness="{TemplateBinding BorderThickness}"
                        Background="{TemplateBinding Background}"
                        Padding="{TemplateBinding Padding}"
                        SnapsToDevicePixels="True"
                        CornerRadius="10">
                        <ScrollViewer x:Name="DG_ScrollViewer" Focusable="false" HorizontalScrollBarVisibility="Auto">
                            <ScrollViewer.Template>
                                <ControlTemplate TargetType="{x:Type ScrollViewer}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- Cabeçalho das colunas -->
                                        <DataGridColumnHeadersPresenter x:Name="PART_ColumnHeadersPresenter"
                                                                     Grid.Column="1"
                                                                     Visibility="{Binding HeadersVisibility, 
                                                                     Converter={x:Static DataGrid.HeadersVisibilityConverter}, 
                                                                     ConverterParameter={x:Static DataGridHeadersVisibility.Column}, 
                                                                     RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"/>

                                        <!-- Área de rolagem -->
                                        <ScrollContentPresenter x:Name="PART_ScrollContentPresenter"
                                                          Grid.Row="1"
                                                          Grid.ColumnSpan="2"
                                                          CanContentScroll="{TemplateBinding CanContentScroll}"/>

                                        <!-- Barra de rolagem vertical -->
                                        <ScrollBar x:Name="PART_VerticalScrollBar"
                                              Grid.Row="1"
                                              Grid.Column="2"
                                              Orientation="Vertical"
                                              ViewportSize="{TemplateBinding ViewportHeight}"
                                              Maximum="{TemplateBinding ScrollableHeight}"
                                              Visibility="{TemplateBinding ComputedVerticalScrollBarVisibility}"
                                              Value="{Binding VerticalOffset, Mode=OneWay, RelativeSource={RelativeSource TemplatedParent}}"/>

                                        <!-- Barra de rolagem horizontal -->
                                        <ScrollBar x:Name="PART_HorizontalScrollBar"
                                              Grid.Row="2"
                                              Grid.Column="1"
                                              Orientation="Horizontal"
                                              ViewportSize="{TemplateBinding ViewportWidth}"
                                              Maximum="{TemplateBinding ScrollableWidth}"
                                              Visibility="{TemplateBinding ComputedHorizontalScrollBarVisibility}"
                                              Value="{Binding HorizontalOffset, Mode=OneWay, RelativeSource={RelativeSource TemplatedParent}}"/>
                                    </Grid>
                                </ControlTemplate>
                            </ScrollViewer.Template>
                            <ItemsPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                        </ScrollViewer>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

        <!-- Estilo para as linhas -->
        <Setter Property="RowStyle">
            <Setter.Value>
                <Style TargetType="{x:Type DataGridRow}">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Foreground" Value="{StaticResource CommonGrid.Foreground}"/>
                    <Setter Property="SnapsToDevicePixels" Value="true"/>
                    <Setter Property="Height" Value="Auto"/>
                    <Setter Property="Width" Value="Auto"/>
                    <Setter Property="Margin" Value="5"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type DataGridRow}">
                                <Border x:Name="DGR_Border"
                                    Background="{TemplateBinding Background}"
                                    BorderThickness="0,0,0,0"
                                    BorderBrush="Transparent"
                                    SnapsToDevicePixels="True"
                                    CornerRadius="4">
                                    <SelectiveScrollingGrid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- Indicador de seleção -->
                                        <Rectangle x:Name="DGR_SelectionBackground"
                                              Grid.ColumnSpan="2"
                                              Opacity="0"/>

                                        <!-- Células -->
                                        <DataGridCellsPresenter Grid.Column="1"
                                                            ItemsPanel="{TemplateBinding ItemsPanel}"
                                                            SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                                            Height="50"/>

                                        <!-- Detalhes da linha -->
                                        <DataGridDetailsPresenter Grid.Column="1"
                                                             Grid.Row="1"
                                                             SelectiveScrollingGrid.SelectiveScrollingOrientation="{Binding AreRowDetailsFrozen, 
                                                             ConverterParameter={x:Static SelectiveScrollingOrientation.Vertical}, 
                                                             Converter={x:Static DataGrid.RowDetailsScrollingConverter}, 
                                                             RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"
                                                             Visibility="{TemplateBinding DetailsVisibility}"/>

                                        <!-- Indicador de erro -->
                                        <Rectangle x:Name="DGR_ErrorIndicator"
                                              Grid.Column="0"
                                              HorizontalAlignment="Right"
                                              Width="6"
                                              Fill="Red"
                                              Visibility="Collapsed"/>

                                        

                                    </SelectiveScrollingGrid>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <!--Setter TargetName="DGR_SelectionBackground" Property="Opacity" Value="1"-->
                                        <Setter Property="Background" Value="{StaticResource CommonGrid.Foreground}"/>
                                        <Setter Property="Foreground" Value="{StaticResource CommonGrid.Background}"/>
                                    </Trigger>
                                    <Trigger Property="IsKeyboardFocusWithin" Value="False">
                                        <!--Setter TargetName="DGR_SelectionBackground" Property="Opacity" Value="1"-->
                                        <Setter Property="IsSelected" Value="False"/>
                                    </Trigger>
                                    <MultiTrigger>
                                        <MultiTrigger.Conditions>
                                            <Condition Property="IsMouseOver" Value="True"/>
                                            <Condition Property="IsSelected" Value="False"/>
                                        </MultiTrigger.Conditions>
                                        <Setter Property="Background" Value="White"/>
                                    </MultiTrigger>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Foreground" Value="{StaticResource CommonGrid.Background}"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Setter.Value>
        </Setter>

        <!-- Estilo para células -->
        <Setter Property="CellStyle">
            <Setter.Value>
                <Style TargetType="{x:Type DataGridCell}">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="BorderBrush" Value="Transparent"/>
                    <Setter Property="BorderThickness" Value="0,0,0,0"/>
                    <Setter Property="Height" Value="Auto"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type DataGridCell}">
                                <Border Background="Transparent"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    SnapsToDevicePixels="True"
                                        Height="Auto">
                                    <ContentPresenter VerticalAlignment="Center" Margin="10,0,10,0"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Setter.Value>
        </Setter>

        <!-- Estilo para cabeçalhos de coluna -->
        <Setter Property="ColumnHeaderStyle">
            <Setter.Value>
                <Style TargetType="{x:Type DataGridColumnHeader}">
                    <Setter Property="Background" Value="{StaticResource CommonGrid.Background}"/>
                    <Setter Property="Foreground" Value="{StaticResource CommonGrid.Foreground}"/>
                    <Setter Property="BorderBrush" Value="{StaticResource CommonGrid.BorderBrush}"/>
                    <Setter Property="BorderThickness" Value="0,0,1,1"/>
                    <Setter Property="Padding" Value="15,0,15,0"/>
                    <Setter Property="Margin" Value="5,15,5,15"/>
                    <Setter Property="HorizontalContentAlignment" Value="Left"/>
                    <Setter Property="Height" Value="40"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="FontFamily" Value="Quicksand"/>
                    <Setter Property="FontSize" Value="20"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type DataGridColumnHeader}">
                                <Grid>
                                    <Border x:Name="HeaderBorder"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="Transparent"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        SnapsToDevicePixels="True"
                                        CornerRadius="10">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <ContentPresenter x:Name="HeaderContent"
                                                        Margin="{TemplateBinding Padding}"
                                                        VerticalAlignment="Center"
                                                        HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                        SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>

                                            <Path x:Name="SortArrow"
                                              Grid.Column="1"
                                              Width="8"
                                              Height="6"
                                              Margin="5,0,5,0"
                                              VerticalAlignment="Center"
                                              Fill="{TemplateBinding Foreground}"
                                              Stretch="Uniform"
                                              Visibility="Collapsed"
                                              Data="M0,0 L1,0 0.5,1 z"/>
                                        </Grid>
                                    </Border>
                                    <Thumb x:Name="PART_HeaderGripper"
                                       HorizontalAlignment="Right"
                                       Width="4"
                                       Background="Transparent">
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="{x:Type Thumb}">
                                                <Border Background="Transparent" Width="4"/>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Grid>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>