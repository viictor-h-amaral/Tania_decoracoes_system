<UserControl x:Class="TaniaDecoracoes.WPFLibrary.UserControls.CommonDataGrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TaniaDecoracoes.WPFLibrary.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <Grid>
        <Grid.Resources>
            <ResourceDictionary>
                <ResourceDictionary.MergedDictionaries>
                    <ResourceDictionary Source="/TaniaDecoracoes.WPFLibrary;component/Styles/Buttons/GridButtonsStyle.xaml" />
                    <ResourceDictionary Source="/TaniaDecoracoes.WPFLibrary;component/Styles/CommonGridStyle.xaml" />
                    <ResourceDictionary Source="/TaniaDecoracoes.WPFLibrary;component/Styles/Buttons/TableGridButtonsStyle.xaml" />
                </ResourceDictionary.MergedDictionaries>
            </ResourceDictionary>
        </Grid.Resources>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="Titulo"
                   Grid.Row="0"
                   Text="{Binding Titulo}"
                   FontSize="35"
                   Margin="10"
                   FontFamily="Quicksand"
                   FontWeight="SemiBold"
                   Foreground="#7A3A5C"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"/>

        <ItemsControl x:Name="itemsControl"  ItemsSource="{Binding DataGridTableButtons, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                      HorizontalAlignment="Right" 
                      Grid.Row="0" Width="Auto">
            
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal" Width="Auto" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
                
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button Content="{Binding Conteudo, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                            Background="{Binding Background, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                            Foreground="{Binding Foreground, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                            Style="{StaticResource TableGridButton}"
                            Command="{Binding Comando, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                            Tag="{Binding Icone}" 
                            Margin="6"
                            Width="Auto"/>
                    </DataTemplate> 
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <DataGrid x:Name="MainGrid" 
                  Grid.Row="1"
                  Width="Auto"
                  Style="{StaticResource CommonDataGridTemplate}"
                  ItemsSource="{Binding Items}"
                  SelectedItem="{Binding SelectedItem, Mode=TwoWay}"
                  AutoGenerateColumns="False"
                  CanUserAddRows ="False"
                  CanUserDeleteRows="False">
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10" Width="Auto">
            <Button x:Name="gridBtnVoltar"
                Style="{StaticResource GridButtonsStyle}"
                Tag="&#xf060;"
                Width="Auto"
                Margin="5"
                Command="{Binding VoltarCommand}"/>

            <Button x:Name="gridBtnAvancar"
                Style="{StaticResource GridButtonsStyle}"
                Tag="&#xf061;"
                Margin="5"
                Width="Auto"
                Command="{Binding AvancarCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>
