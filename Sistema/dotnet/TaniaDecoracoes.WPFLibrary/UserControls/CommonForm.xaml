<UserControl x:Class="TaniaDecoracoes.WPFLibrary.UserControls.CommonForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TaniaDecoracoes.WPFLibrary.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        
        <DataTemplate x:Key="StringFieldTemplate">
            <StackPanel Orientation="Vertical" Margin="0, 0, 15, 30">

                <TextBlock Text="{Binding Label}" 
                           FontWeight="Bold" 
                           FontSize="22"
                           FontFamily="Quicksand"
                           Margin="2"/>
                <TextBox Text="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         IsReadOnly="{Binding IsReadOnly, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         FontSize="18"
                         FontFamily="Quicksand"
                         Padding="5"
                         Background="White"/>

            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="BooleanFieldTemplate">
            <StackPanel Orientation="Vertical">
                <TextBlock Text="{Binding Label}" FontWeight="Bold"/>
                <CheckBox IsChecked="{Binding Value, Mode=TwoWay}" Margin="20"/>
            </StackPanel>

        </DataTemplate>

        <local:FieldTemplateSelector x:Key="FieldTemplateSelector"
                    StringTemplate="{StaticResource StringFieldTemplate}"
                    BooleanTemplate="{StaticResource BooleanFieldTemplate}"/>

    </UserControl.Resources>
    
    
    <Grid>

        <Grid.Resources>
            <ResourceDictionary>
                <ResourceDictionary.MergedDictionaries>
                    <ResourceDictionary Source="/TaniaDecoracoes.WPFLibrary;component/Styles/Buttons/CloseFormButtonStyle.xaml" />
                    <ResourceDictionary Source="/TaniaDecoracoes.WPFLibrary;component/Styles/Buttons/FormButtonsStyle.xaml" />
                </ResourceDictionary.MergedDictionaries>
            </ResourceDictionary>
        </Grid.Resources>

        <Grid.RowDefinitions>
            <RowDefinition x:Name="TituloRow" Height="Auto"/>
            <RowDefinition x:Name="CustomButtonsRow"  Height="40"/>
            <RowDefinition x:Name="FieldsRow"  Height="*"/>
            <RowDefinition x:Name="CustomButtonsRow2"  Height="40"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="Titulo"
               Grid.Row="0"
               Text="{Binding Titulo}"
               FontSize="35"
               Margin="0, 0, 0, 50"
               FontFamily="Quicksand"
               FontWeight="SemiBold"
               Foreground="#7A3A5C"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"/>

        <ItemsControl x:Name="itemsControl"  ItemsSource="{Binding FormCommands, UpdateSourceTrigger=PropertyChanged}" 
              HorizontalAlignment="Right" 
              Grid.Row="1" Width="Auto">

            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal" Width="Auto" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button Content="{Binding Conteudo, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                        Background="{Binding Background, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                        Foreground="{Binding Foreground, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                        Style="{StaticResource FormButton}"
                        Command="{Binding Comando, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                        Tag="{Binding Icone}" 
                        Margin="6"
                        Width="Auto"
                        Height="Auto"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <ItemsControl ItemsSource="{Binding Fields}" Grid.Row="2" VerticalAlignment="Top">

            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal" Width="Auto" MaxWidth="500"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <ContentControl Content="{Binding}"
                                ContentTemplateSelector="{StaticResource FieldTemplateSelector}"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>

        </ItemsControl>

        <ItemsControl x:Name="itemsControl2"  ItemsSource="{Binding FormCommands, UpdateSourceTrigger=PropertyChanged}" 
              HorizontalAlignment="Right" Grid.Row="3" Width="Auto">

            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal" Width="Auto" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button Content="{Binding Conteudo, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                        Background="{Binding Background, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                        Foreground="{Binding Foreground, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                        Style="{StaticResource FormButton}"
                        Command="{Binding Comando, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                        Tag="{Binding Icone}" 
                        Margin="6"
                        Width="Auto"
                        Height="Auto"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</UserControl>
