<UserControl x:Class="TaniaDecoracoes.WPFLibrary.UserControls.CommonForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:local="clr-namespace:TaniaDecoracoes.WPFLibrary.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>

        <DataTemplate x:Key="DateOnlyFieldTemplate">
            <StackPanel Orientation="Vertical" 
                        HorizontalAlignment="Left" 
                        Margin="0, 0, 15, 30">
                <TextBlock Text="{Binding Label}" 
                        FontWeight="Bold"
                        FontSize="18"
                        FontFamily="Quicksand"
                        Padding="5"
                        HorizontalAlignment="Left"/>
                <DatePicker Name="MyDatePicker" 
                            Width="200" 
                            SelectedDate="{Binding Value, Mode=TwoWay, StringFormat='dd/MM/yyyy'}"
                            FontSize="18"
                            FontFamily="Quicksand"
                            Padding="5"
                            Background="White"
                            HorizontalAlignment="Stretch"/>
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="DateTimeFieldTemplate">
            <StackPanel Orientation="Vertical" 
                        HorizontalAlignment="Left" 
                        Margin="0, 0, 15, 30">
                <TextBlock Text="{Binding Label}" 
                   FontWeight="Bold" 
                   FontSize="22"
                   FontFamily="Quicksand"
                   Margin="2"
                   HorizontalAlignment="Left"/>
                <xctk:DateTimePicker 
                    Name="MyDateTimePicker" 
                    Width="200"
                    FontSize="18"
                    FontFamily="Quicksand"
                    Padding="5"
                    Background="White"
                    Format="FullDateTime" 
                    Value="{Binding Value, Mode=TwoWay}"
                    CultureInfo="pt-BR"
                    HorizontalAlignment="Left"/>
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="StringFieldTemplate">
            <StackPanel Orientation="Vertical" 
                        HorizontalAlignment="Left" 
                        Margin="0, 0, 15, 30">

                <TextBlock Text="{Binding Label}" 
                           FontWeight="Bold" 
                           FontSize="22"
                           FontFamily="Quicksand"
                           Margin="2"
                           HorizontalAlignment="Left"/>
                <TextBox Text="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         IsEnabled="{Binding IsEnabled, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         FontSize="18"
                         FontFamily="Quicksand"
                         Padding="5"
                         Background="White"
                         HorizontalAlignment="Stretch"/>
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="ObjectsFieldTemplate">
            <StackPanel Orientation="Vertical" 
                        HorizontalAlignment="Left" 
                        Margin="0, 0, 15, 30">

                <TextBlock Text="{Binding Label}" 
                        FontWeight="Bold" 
                        FontSize="22"
                        FontFamily="Quicksand"
                        Margin="2"
                        HorizontalAlignment="Left"/>
                <ComboBox ItemsSource="{Binding Path=InstanceValues, UpdateSourceTrigger=PropertyChanged}"
                         DisplayMemberPath="Identificacao"
                         IsEnabled="{Binding IsEnabled, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         SelectedItem="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         FontSize="18"
                         FontFamily="Quicksand"
                         Padding="5"
                         Background="White"
                         HorizontalAlignment="Stretch"/>
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="BooleanFieldTemplate">
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Margin="0, 0, 15, 30">
                <TextBlock Text="{Binding Label}" 
                           FontWeight="Bold" 
                           FontSize="22"
                           FontFamily="Quicksand"
                           Margin="5"/>
                <CheckBox IsChecked="{Binding Value, Mode=TwoWay}" 
                            Margin="5"
                            VerticalAlignment="Center">
                    <CheckBox.LayoutTransform>
                        <ScaleTransform ScaleX="1.5" ScaleY="1.5" />
                    </CheckBox.LayoutTransform>
                </CheckBox>
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="IntegerFieldTemplate">
            <StackPanel Orientation="Vertical" 
                        HorizontalAlignment="Left" 
                        Margin="0, 0, 15, 30">

                <TextBlock Text="{Binding Label}" 
                        FontWeight="Bold" 
                        FontSize="22"
                        FontFamily="Quicksand"
                        Margin="2"
                        HorizontalAlignment="Left"/>
                <xctk:IntegerUpDown Value="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        IsEnabled="{Binding IsEnabled, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        FontSize="18"
                        FontFamily="Quicksand"
                        Padding="5"
                        Background="White"
                        FormatString="N"
                        Watermark="1.234"
                        CultureInfo="pt-BR"
                        HorizontalAlignment="Stretch"/>
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="CurrencyFieldTemplate">
            <StackPanel Orientation="Vertical" 
                        HorizontalAlignment="Left" 
                        Margin="0, 0, 15, 30">

                <TextBlock Text="{Binding Label}" 
                    FontWeight="Bold" 
                    FontSize="22"
                    FontFamily="Quicksand"
                    Margin="2"
                    HorizontalAlignment="Left"/>
                <xctk:DecimalUpDown Value="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    IsEnabled="{Binding IsEnabled, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    FontSize="18"
                    FontFamily="Quicksand"
                    Padding="5"
                    Background="White"
                    FormatString="C"
                    Watermark="R$ 1.234,56"
                    CultureInfo="pt-BR"
                    HorizontalAlignment="Stretch"/>
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="DoubleFieldTemplate">
            <StackPanel Orientation="Vertical" 
                        HorizontalAlignment="Left" 
                        Margin="0, 0, 15, 30">

                <TextBlock Text="{Binding Label}" 
                    FontWeight="Bold" 
                    FontSize="22"
                    FontFamily="Quicksand"
                    Margin="2"
                    HorizontalAlignment="Left"/>
                <xctk:DoubleUpDown Value="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    IsEnabled="{Binding IsEnabled, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    FontSize="18"
                    FontFamily="Quicksand"
                    Padding="5"
                    Background="White"
                    FormatString="N"
                    Watermark="123,45"
                    CultureInfo="pt-BR"
                    HorizontalAlignment="Stretch"/>
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="FloatFieldTemplate">
            <StackPanel Orientation="Vertical" 
                        HorizontalAlignment="Left" 
                        Margin="0, 0, 15, 30">

                <TextBlock Text="{Binding Label}" 
                    FontWeight="Bold" 
                    FontSize="22"
                    FontFamily="Quicksand"
                    Margin="2"
                    HorizontalAlignment="Left"/>
                <xctk:SingleUpDown Value="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    IsEnabled="{Binding IsEnabled, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    FontSize="18"
                    FontFamily="Quicksand"
                    Padding="5"
                    Background="White"
                    FormatString="N"
                    Watermark="123,45"
                    CultureInfo="pt-BR"
                    HorizontalAlignment="Stretch"/>
            </StackPanel>
        </DataTemplate>

        <local:FieldTemplateSelector x:Key="FieldTemplateSelector"
                    StringTemplate="{StaticResource StringFieldTemplate}"
                    BooleanTemplate="{StaticResource BooleanFieldTemplate}"
                    DateTimeTemplate="{StaticResource DateTimeFieldTemplate}"
                    DateOnlyTemplate="{StaticResource DateOnlyFieldTemplate}"
                    IntegerTemplate="{StaticResource IntegerFieldTemplate}"
                    CurrencyTemplate="{StaticResource CurrencyFieldTemplate}"
                    DoubleTemplate="{StaticResource DoubleFieldTemplate}"
                    FloatTemplate="{StaticResource FloatFieldTemplate}"
                    ObjectsTemplate="{StaticResource ObjectsFieldTemplate}"/>

    </UserControl.Resources>


    <Grid>

        <Grid.Resources>
            <ResourceDictionary>
                <ResourceDictionary.MergedDictionaries>
                    <ResourceDictionary Source="/TaniaDecoracoes.WPFLibrary;component/Styles/Buttons/CloseFormButtonStyle.xaml" />
                    <ResourceDictionary Source="/TaniaDecoracoes.WPFLibrary;component/Styles/Buttons/FormButtonsStyle.xaml" />
                </ResourceDictionary.MergedDictionaries>
            </ResourceDictionary>
        </Grid.Resources>

        <Grid.RowDefinitions>
            <RowDefinition x:Name="TituloRow" Height="Auto"/>
            <RowDefinition x:Name="CustomButtonsRow"  Height="40"/>
            <RowDefinition x:Name="FieldsRow"  Height="*"/>
            <RowDefinition x:Name="CustomButtonsRow2"  Height="40"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="Titulo"
               Grid.Row="0"
               Text="{Binding Titulo}"
               FontSize="35"
               Margin="10, 15, 0, 25"
               FontFamily="Quicksand"
               FontWeight="SemiBold"
               Foreground="#7A3A5C"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"/>

        <ItemsControl x:Name="itemsControlComandos"  
              ItemsSource="{Binding FormCommands, UpdateSourceTrigger=PropertyChanged}" 
              HorizontalAlignment="Right" 
              Grid.Row="1" Width="Auto">

            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal" Width="Auto" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button Content="{Binding Conteudo, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                        Background="{Binding Background, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                        Foreground="{Binding Foreground, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                        Style="{StaticResource FormButton}"
                        Command="{Binding Comando, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                        Tag="{Binding Icone}" 
                        Margin="6"
                        Width="Auto"
                        Height="Auto"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <ScrollViewer VerticalScrollBarVisibility="Hidden" 
                      HorizontalScrollBarVisibility="Disabled" 
                      Grid.Row="2">
            <ItemsControl x:Name="itemsControlCampos" 
                          ItemsSource="{Binding Fields}" 
                          VerticalAlignment="Top">

                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" 
                                   Width="Auto" 
                                   MaxWidth="800"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <ContentControl Content="{Binding}"
                                    ContentTemplateSelector="{StaticResource FieldTemplateSelector}"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>

            </ItemsControl>
        </ScrollViewer>

        <ItemsControl x:Name="itemsControlComandos2"  
                      ItemsSource="{Binding FormCommands, UpdateSourceTrigger=PropertyChanged}" 
                      HorizontalAlignment="Right" 
                      Grid.Row="3" 
                      Width="Auto">

            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal" 
                                Width="Auto" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button Content="{Binding Conteudo, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                        Background="{Binding Background, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                        Foreground="{Binding Foreground, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                        Style="{StaticResource FormButton}"
                        Command="{Binding Comando, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                        Tag="{Binding Icone}" 
                        Margin="6"
                        Width="Auto"
                        Height="Auto"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</UserControl>
