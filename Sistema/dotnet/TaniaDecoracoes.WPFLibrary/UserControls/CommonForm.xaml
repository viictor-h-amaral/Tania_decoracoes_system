<UserControl x:Class="TaniaDecoracoes.WPFLibrary.UserControls.CommonForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TaniaDecoracoes.WPFLibrary.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        
        <DataTemplate x:Key="StringFieldTemplate">
            <StackPanel Orientation="Vertical" Margin="0, 0, 15, 15">
                
                <TextBlock Text="{Binding Label}" 
                           FontWeight="Bold" 
                           FontSize="22"
                           FontFamily="Quicksand"
                           Margin="2"/>
                
                <Border CornerRadius="6" Padding="2" Background="White">
                <TextBox Text="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         IsReadOnly="{Binding IsReadOnly}"
                         FontSize="18"
                         FontFamily="Quicksand"
                         Padding="5"
                         BorderThickness="0"
                         Background="Transparent"/>
                </Border>

            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="BooleanFieldTemplate">
            <StackPanel Orientation="Vertical">
                <TextBlock Text="{Binding Label}" FontWeight="Bold"/>
                <CheckBox IsChecked="{Binding Value, Mode=TwoWay}" Margin="20"/>
            </StackPanel>

        </DataTemplate>

        <DataTemplate x:Key="NumericFieldTemplate">
            <TextBox Text="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         IsReadOnly="{Binding IsReadOnly}"
                         Margin="0,2"
                         HorizontalAlignment="Stretch"/>
        </DataTemplate>

        <local:FieldTemplateSelector x:Key="FieldTemplateSelector"
                    StringTemplate="{StaticResource StringFieldTemplate}"
                    BooleanTemplate="{StaticResource BooleanFieldTemplate}"/>

    </UserControl.Resources>
    
    
    <Grid>

        <Grid.Resources>
            <ResourceDictionary>
                <ResourceDictionary.MergedDictionaries>
                    <ResourceDictionary Source="/TaniaDecoracoes.WPFLibrary;component/Styles/Buttons/CloseFormButtonStyle.xaml" />
                </ResourceDictionary.MergedDictionaries>
            </ResourceDictionary>
        </Grid.Resources>

        <Grid.RowDefinitions>
            <RowDefinition x:Name="TituloRow" Height="Auto"/>
            <!-- <RowDefinition x:Name="CloseButtonRow" Height="Auto"/> -->
            <RowDefinition x:Name="CustomButtonsRow"  Height="10"/>
            <RowDefinition x:Name="FieldsRow"  Height="*"/>
            <RowDefinition x:Name="CustomButtonsRow2"  Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="Titulo"
           Grid.Row="0"
           Text="{Binding Titulo}"
           FontSize="35"
           Margin="10"
           FontFamily="Quicksand"
           FontWeight="SemiBold"
           Foreground="#7A3A5C"
           HorizontalAlignment="Left"
           VerticalAlignment="Center"/>

        <!-- <Button Grid.Row="1"
                x:Name="CloseButton"
                Style="{StaticResource CloseFormButtonStyle}"
                Tag="&#xf00d;"
                Width="Auto"
                Margin="5"
                HorizontalAlignment="Right"
                Command="{Binding CloseCommand}"/> -->
        
        <StackPanel Grid.Row="2" x:Name="stckPanelCommands" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10" Width="Auto">
            <!-- Criar pelo código c# / definidos por quem instancia esse cara -->
                        
        </StackPanel>

        <ItemsControl ItemsSource="{Binding Fields}" Grid.Row="2" VerticalAlignment="Top">

                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" Width="Auto" MaxWidth="500"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <ContentControl Content="{Binding}"
                              ContentTemplateSelector="{StaticResource FieldTemplateSelector}"/>
                            <TextBlock Text="{Binding ErrorMessage}" />
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <StackPanel Grid.Row="3" x:Name="stckPanelCommands2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10" Width="Auto">
            <!-- Criar pelo código c# / definidos por quem instancia esse cara / Cópia da estrutura de stckPanelCommands -->

        </StackPanel>
    </Grid>
</UserControl>
