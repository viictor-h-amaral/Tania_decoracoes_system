<UserControl x:Class="TaniaDecoracoes.WPFLibrary.UserControls.EngenhoMenuUserControls.Grupo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TaniaDecoracoes.WPFLibrary.UserControls.EngenhoMenuUserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <StackPanel Orientation="Vertical"
                HorizontalAlignment="Center"
                Margin="15">
        
        <Label Content="{Binding Titulo}"
               FontFamily="Quicksand"
               FontSize="18"
               FontWeight="Bold"
               HorizontalAlignment="Left"
               Margin="0, 10, 10, 10"
               Foreground="#7A3A5C"
               Background="Transparent"/>

        <ItemsControl ItemsSource="{Binding Itens}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <local:Item DataContext="{Binding}"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        
    </StackPanel>
</UserControl>
