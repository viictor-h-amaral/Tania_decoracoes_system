<UserControl x:Class="TaniaDecoracoes.WPFLibrary.UserControls.EngenhoMenuUserControls.Item"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TaniaDecoracoes.WPFLibrary.UserControls.EngenhoMenuUserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>

        <StackPanel.Resources>
            <ResourceDictionary>
                <ResourceDictionary.MergedDictionaries>
                    <ResourceDictionary Source="/TaniaDecoracoes.WPFLibrary;component/Styles/EngenhoMenuStyle/ItemButtonStyle.xaml" />
                </ResourceDictionary.MergedDictionaries>
            </ResourceDictionary>
        </StackPanel.Resources>

        <Button
            Content="{Binding Titulo}"
            Command="{Binding Comando}"
            Style="{StaticResource ItemButtonStyle}"
            Margin="{Binding Margin}"
            FontSize="{Binding FontSize}"/>

        <ItemsControl ItemsSource="{Binding SubItens}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <local:Item DataContext="{Binding}"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

    </StackPanel>
</UserControl>
