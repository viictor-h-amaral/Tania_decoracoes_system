<UserControl x:Class="TaniaDecoracoes.WPFLibrary.UserControls.MenuSuperiorConfiguracoes"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TaniaDecoracoes.WPFLibrary.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>

        <Grid.Resources>
            <ResourceDictionary>
                <ResourceDictionary.MergedDictionaries>
                    <ResourceDictionary Source="/TaniaDecoracoes.WPFLibrary;component/Styles/Buttons/MenuSuperiorConfiguracoesButton.xaml" />
                </ResourceDictionary.MergedDictionaries>
            </ResourceDictionary>
        </Grid.Resources>
        
        
        <StackPanel
            Orientation="Horizontal"
            VerticalAlignment="Center"
            HorizontalAlignment="Right"
            Margin="0,0,10,0">

            <Button x:Name="cmdBlackWhiteMode"
                    Style="{StaticResource MenuSuperiorConfiguracoesButton}"
                    Tag="&#xf186;"
                    Command="{Binding Trocar}"/>

            <Button x:Name="cmdParametrizacoes"
                Style="{StaticResource MenuSuperiorConfiguracoesButton}"
                Tag="&#xf0ad;"
                Command="{Binding Trocar}"/>

            <Button x:Name="cmdBugs"
                    Style="{StaticResource MenuSuperiorConfiguracoesButton}"
                    Tag="&#xf188;"
                    Command="{Binding Trocar}"/>

        </StackPanel>
    </Grid>
</UserControl>
