<padroesJanelas:FormWindowBase x:Class="TaniaDecoracoes.WPFLibrary.Windows.FormWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaniaDecoracoes.WPFLibrary.Windows"
        xmlns:userControls="clr-namespace:TaniaDecoracoes.WPFLibrary.UserControls"
        xmlns:padroesJanelas="clr-namespace:TaniaDecoracoes.WPFLibrary.WindowsPattern"
        mc:Ignorable="d"
        Title="FormWindow" Height="450" Width="800">
    <StackPanel Orientation="Vertical">

        <StackPanel.Resources>
            <ResourceDictionary>
                <ResourceDictionary.MergedDictionaries>
                    <ResourceDictionary Source="/TaniaDecoracoes.WPFLibrary;component/Styles/ControleJanelaStyle.xaml" />
                </ResourceDictionary.MergedDictionaries>
            </ResourceDictionary>
        </StackPanel.Resources>

        <Button Content="×" FontSize="18" HorizontalAlignment="Right" VerticalAlignment="Center" Command="{Binding CloseCommand}"
                Style="{StaticResource ControleJanelaClose}" Height="30" Width="30"/>
        
        <userControls:CommonForm x:Name="Form" DataContext="{Binding FormVM}"/>
        
    </StackPanel>
</padroesJanelas:FormWindowBase>
